{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-fexec-charset=GBK", 
                "-finput-charset=UTF-8",
                "-o",
                "D:/cpp/.vscode/c++/exe/${fileBasenameNoExtension}.exe",
                "D:/opencv452/install/x64/mingw/bin/libopencv_world452.dll",
                "-I", "D:/opencv452/install/include",
                "-I", "D:/opencv452/install/include/opencv2",
                "-I", "D:/opencv452/install/x64/mingw/lib",
                "-L", "C:/MinGW/lib",
                "-L", "D:/opencv452/install/x64/mingw/bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { 
            "panel": "new" //默认为“shared“表示共享，改成new之后每个进程创建新的端口
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}